            android:inputType="none"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
